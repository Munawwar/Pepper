{
  "name": "@pepper-js/pepper",
  "version": "0.1.0",
  "description": "Bring your server-side templates to life",
  "source": "./pepper.js",
  "type": "module",
  "exports": {
    "default": "./pepper.js",
    "import": "./pepper.js",
    "browser": "./dist/browser/pepper.min.js",
    "require": "./pepper/cjs/pepper.js"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "./build.sh",
    "demo": " browser-sync start --server --port 3005 --startPath=examples/plain/test.html --watch --files=pepper.js,examples",
    "publish": "npm publish --access public"
  },
  "keywords": [
    "sprinkle some js"
  ],
  "author": "Munawwar",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.29.1",
    "esbuild": "^0.17.15",
    "eslint": "^8.10.0"
  },
  "repository": "github:Munawwar/pepper",
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {}
  }
}
